<!DOCTYPE html>
<html>
  <head>
    <title>Bookmark Manager</title>
  </head>

  <body>
    <% if current_user %>
    <div>
      Welcome <%= current_user.email %>!
        <form method="post" action="/sessions">
          <input type="hidden" name="_method" value="delete">
          <input type="submit" id="sign_out" value="Sign out">
        </form>
      </div>
      <% end %>
      <% if flash[:notice] %>
        <div id = 'notice'>
          <%= flash[:notice] %>
        </div>
      <% end %>
      <% if flash[:errors] && !flash[:errors].empty? %>
      <div>
      Sorry, there were the following problems with your input:
      <ul id='errors'>
        <% flash[:errors].each do |error| %>
        <li> <%= error %></li>
          <% end %>
      </ul>
    <% end %>
  </div>
      <%= yield %>
  </body>
</html>
